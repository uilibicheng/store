.container {
  position: relative;
  height: 330rpx;
  padding: 22rpx 22rpx;
  margin-top: -26rpx;
  font-size: 0;
  background-size: cover;
  background-repeat: no-repeat;
  box-sizing: border-box;
}

.container--has-share {
  height: 412rpx;
}

.list {
  height: 304rpx;
}

.cover {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 32rpx;
  z-index: 2;
}

.sticker {
  display: inline-block;
  width: 96rpx;
  height: 96rpx;
  margin: 36rpx 22rpx 0;
  border: 1px solid rgba(255, 255, 255, .5);
  border-radius: 4rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.locked-sticker-container {
  position: relative;
}

.locked-sticker {
  position: absolute;
  left: 0;
  top: 0;
  width: 96rpx;
  height: 96rpx;
}

.sticker__lock {
  position: absolute;
  left: 0;
  top: 0;
  width: 92rpx;
  height: 92rpx;
}

.active {
  border-color: #fff;
}

.tip {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #fff;
}

.prev,
.next {
  position: absolute;
  top: -150rpx;
  left: 40rpx;
  width: 96rpx;
  height: 96rpx;
  z-index: 2;
}

.next {
  left: initial;
  right: 40rpx;
}

.create-share-poster {
  margin: 0 8rpx;
  padding-top: 16rpx;
  border-top: 1px solid #fff;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  text-align: center;
}
