/* components/tips-modal/tips-modal.wxss */
.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .65);
  z-index: 99999;
}

.container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  background: #FFF9E3;
  border-radius: 8rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.container.small-modal {
  width: 460rpx;
  padding: 46rpx 32rpx 50rpx;
}

.container.big-modal {
  width: 628rpx;
  padding: 94rpx 40rpx 64rpx;
  border-radius: 16rpx;
}

.small-modal .title {
  line-height: 44rpx;
  font-size: 32rpx;
  color: #867639;
}

.big-modal .title {
  line-height: 56rpx;
  font-size: 40rpx;
  color: #867639;
}

.content {
  margin: 36rpx 0;
}

.btn {
  background-image: linear-gradient(180deg, #FFF2AE 0%, #E2AA5D 100%);
  margin: 0 auto;
  color: #867639;
  box-sizing: border-box;
}

.btn.small-btn {
  display: inline-block;
  line-height: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  padding: 0 50rpx;
  font-size: 24rpx;
}

.btn.big-btn {
  line-height: 102rpx;
  height: 102rpx;
  border-radius: 51rpx;
  font-size: 30rpx;
}

.btn.disabled {
  background-image: unset;
  background-color: #CCC;
  color: #FFF;
}
