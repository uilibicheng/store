/* components/nav-bar/nav-bar.wxss */
.nav-bar-container {
  position: fixed;
  width: 100vw;
  background-color: #fff;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  z-index: 10;
  box-shadow: 0 4rpx 14rpx 0 #987F6D;
  box-sizing: border-box;
  padding: 8rpx 10rpx 0;
}

.nav-bar-item {
  width: 25%;
  height: 104rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  line-height: 32rpx;
  font-size: 22rpx;
  color: #B8B3AE;
  font-family: PingFangSC-Regular;
  position: relative;
}

.nav-bar-item.active {
  color: #BBAB9F;
}

.nav-bar-item image {
  width: 44rpx;
  height: 44rpx;
}

.nav-bar-item:not(:last-child) {
  /* border-right: 1px solid #D81A13; */
}

.pb34 {
  padding-bottom: 34rpx;
}

.nav-bar-item .auth-handler {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  opacity: 0;
}
