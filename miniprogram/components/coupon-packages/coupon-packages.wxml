<view class="coupon-packages-contant">
  <image class="coupon-packages-shopIcon" src="./images/shop.png" />
  <view class="coupon-packages-shopName">木屋烧烤</view>
  <view class="coupon-packages-flex">
    <van-image width="100" height="100" src="{{couponItem.image}}" />
    <view class="coupon-packages-right">
      <text class="coupon-packages-title">{{couponItem.name}}</text>
      <view class="coupon-packages-dsc">{{couponItem.use_time}}</view>
      <text class="coupon-packages-sell">已售{{couponItem.sales.total_sales}}</text>
      <view class="coupon-packages-sellMoney">￥{{couponItem.price.current_price}}
        <text class="coupon-packages-yuanMoney">￥{{couponItem.price.original_price}}</text>
        <van-tag type="warning" color="#ff9419">{{couponItem.price.discount}}折</van-tag>
        <text bindtap="buyCoupon" data-item="{{couponItem}}" class="coupon-packages-buyButton">抢购</text>
      </view>
    </view>
  </view>
</view>