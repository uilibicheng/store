.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .65);
  z-index: 99999;
}

.container {
  width: 542rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  background: #fff;
  padding-bottom: 50rpx;
}

.header {
  width: 100%;
  height: 176rpx;
}

.close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.title {
  margin-top: 80rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  color: #333;
}

.subtitle {
  margin-top: 16rpx;
  font-size: 28rpx;
  line-height: 38rpx;
  color: #333;
}

.footer {
  margin-top: 90rpx;
  padding: 0 58rpx;
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 190rpx;
  height: 72rpx;
  border: 1px solid #006CBA;
  font-size: 28rpx;
  line-height: 72rpx;
  border-radius: 72rpx;
  background: #fff;
  color: #006CBA;
}

.btn-login {
  background: #006CBA;
  color: #fff;
}

button {
  display: block;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  font-family: inherit;
  user-select: none;
  cursor: pointer;
  outline: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  border-radius: 0;
}

button::after {
  display: none;
}