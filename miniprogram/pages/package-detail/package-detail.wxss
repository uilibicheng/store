.content {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 130rpx;
}

.box-wrap {
  background: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
  font-size: 38rpx;
  font-weight: bold;
}

.header-sale {
  color: #A5A5A5;
  font-size: 24rpx;
  font-weight: normal;
}

.header-img {
  margin-top: 15rpx;
  width: 500rpx;
  height: 300rpx;
}

.header-desc {
  margin-top: 25rpx;
  font-size: 28rpx;
  color: #5B5B5B;
}

.package {
  margin-top: 30rpx;
}

.package-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.menu {
  display: block;
  margin-top: 20rpx;
}

.menu-item {
  margin-left: 30rpx;
  list-style-type: disc;
  display:list-item;
  font-size: 22rpx;
  margin-bottom: 20rpx;
}

.item-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #3F3F3F;
  font-size: 26rpx;
}

.package-price-wrap {
  font-size: 26rpx;
  color: #F88F08;
  font-weight: bold;
}

.package-price-unit {
  font-size: 18rpx;
}

.package-original-price {
  font-size: 18rpx;
  color: #ACACAC;
  text-decoration: line-through;
}

.tip-wrap {
  margin-top: 30rpx;
}

.tip-title {
  font-size: 42rpx;
  color: #1E1E1E;
  font-weight: bold;
}

.tip-block {
  margin-top: 30rpx;
  color: #222222;
  font-size: 28rpx;
  display: flex;
}

.tip {
  color: #D19D4E;
  flex-shrink: 0;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #F8F8F8;
}

.price-wrap {
  font-size: 46rpx;
  color: #EB9034;
}

.price-unit {
  font-size: 26rpx;
}

.orginial-price {
  font-size: 26rpx;
  color: #A0A0A0;
  text-decoration: line-through;
}

.footer-btn {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #E89437;
  color: #ffffff;
  font-size: 38rpx;
  border-radius: 45rpx;
}

