/* pages/business-index/business-index.wxss */
.page-scroll-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
}

.index-panel {
  margin: 96rpx auto 0;
  width: 638rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 20rpx 0 rgba(0, 0, 0, .13);
  border-radius: 16rpx;
  position: relative;
  border: 1rpx solid #fff;
}

.business-avatar {
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  border: 6rpx solid #CBBDAB;
  display: block;
  margin: -63rpx auto 0;
  overflow: hidden;
}

.business-store-name {
  font-weight: 700;
  font-size: 48rpx;
  color: #4B5767;
  text-align: center;
  line-height: 66rpx;
  margin-bottom: 14rpx;
}

.business-info {
  width: 564rpx;
  border-radius: 8rpx;
  background-color: rgba(231, 224, 214, .61);
  padding: 26rpx 28rpx;
  border-left: 6rpx solid rgba(168, 152, 129, .22);
  margin: 0 auto 32rpx;
}

.business-info-label {
  font-weight: 700;
  font-size: 28rpx;
  color: #4B5767;
  line-height: 42rpx;
}

.business-info-value {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4B5767;
  line-height: 42rpx;
  margin-top: 16rpx;
}

.edit-business-info-btn {
  width: 170rpx;
  height: 60rpx;
  border-radius: 30rpx;
  /* background-image: linear-gradient(180deg, #C0AD9E 0%, #8C7565 100%); */
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
  text-align: center;
  line-height: 60rpx;
  margin: 0 auto 28rpx;
  border: 1rpx solid #8C7565;
}

.business-qrcode {
  display: block;
  width: 304rpx;
  height: 304rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 70rpx auto 0;
  overflow: hidden;
  padding: 15rpx;
}

.business-qrcode image {
  width: 100%;
  height: 100%;
}

.business-qrcode-text {
  font-weight: 700;
  font-size: 28rpx;
  color: #4B5767;
  text-align: center;
  margin: 26rpx auto;
}
