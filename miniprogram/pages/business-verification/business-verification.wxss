/* pages/business-verification/business-verification.wxss */
.title {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #4B5767;
  text-align: center;
  line-height: 56rpx;
  margin: 64rpx auto;
}

.img {
  width: 654rpx;
  height: 444rpx;
  background-color: #ddd;
  border-radius: 8rpx;
  margin: 0 auto;
  display: block;
  overflow: hidden;
}

.input-panel {
  width: 654rpx;
  height: 114rpx;
  border-radius: 8rpx;
  background-color: #fff;
  margin: 48rpx auto 0;
  padding-left: 32rpx;
  padding-right: 100rpx;
  position: relative;
}

.input {
  width: 100%;
  height: 100%;
  line-height: 100%;
  color: #8D8D8D;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
}

.input-placeholder {
  opacity: .5;
}

.scan-icon {
  width: 60rpx;
  height: 56rpx;
  position: absolute;
  right: 22rpx;
  top: 50%;
  transform: translateY(-50%);
}

.error-tips {
  padding-left: 50rpx;
  margin-top: 32rpx;
  display: flex;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #CF5A5A;
}

.error-tips image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 9rpx;
}

.btn {
  width: 296rpx;
  height: 84rpx;
  border: 2rpx solid #8C7565;
  border-radius: 45rpx;
  text-align: center;
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
  margin: 104rpx auto 0;
}
