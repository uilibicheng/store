.page {
  display: flex;
  flex-flow: column;
  width: 100%;
  height: 100vh;
  background: #006CBA;
}

.page-content {
  flex-grow: 1;
  flex-shrink: 1;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: space-around;
}

.logo {
  width: 454rpx;
  height: 228rpx;
}

.welcome-info {
  position: relative;
  top: -140rpx;
}

.welcome-info view {
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 80rpx;  
}

.start-btn {
  width: 672rpx;
  height: 112rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  line-height: 112rpx;
  font-family: PingFangSC-Semibold;
