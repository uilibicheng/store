.container .content {
  box-sizing: border-box;
  width: 670rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 0 0 32rpx 32rpx;
  position: relative;
  border-top: 1rpx solid #FFF;
  padding-bottom: 40rpx;
}

.content::before, .content::after {
  content: '';
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  top: -20rpx;
  left: -18rpx;
  background-color: #006CBA;
  z-index: 0;
}

.content::after {
  left: auto;
  right: -18rpx;
}

.order-item-list {
  margin-top: 32rpx;
}

.order-item-list .order-item-view {
  display: flex;
}

.order-item-view .mr {
  flex-shrink: 0;
  width: 1rpx;
  height: 1rpx;
  margin-left: 40rpx;
}

.circle-block {
  width: 630rpx;
  display: block;
  height: 80rpx;
  position: relative;
}

.circle-block.just-one {
  width: 670rpx;
}

.circle-block image {
  display: block;
  width: 100%;
  height: 100%;
}

.order-info-container .qrcode-view {
  /* margin-top: 20rpx; */
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  margin: 52rpx 0 20rpx;
}

.qrcode-view .qrcode-image {
  display: block;
  width: 362rpx;
  height: 362rpx;
  margin: 0 auto;
}

.qrcode-view .qrcode-swiper {
  /* margin: 39rpx 0 0; */
  height: 400rpx;
}

.qrcode-view .qrcode-swiper swiper-item {
  /* height: 362rpx !important; */
}

.qrcode-view .qrcode-text {
  /* opacity: 0.64; */
  font-size: 24rpx;
  color: #FFF;
  text-align: center;
  line-height: 28rpx;
  margin-top: 15rpx;
  padding: 0 30rpx;
}

.qrcode-view .qrcode-text.supplement {
  margin-top: 8rpx;
}

.qrcode-view .qrcode-prev, .qrcode-view .qrcode-next {
  display: block;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.2);
  width: 40rpx;
  height: 64rpx;
  top: 35%;
  left: 30rpx;
}

.qrcode-view .qrcode-next {
  left: auto;
  right: 30rpx;
}

.container .info-view {
  background: #FFF;
  border-radius: 32rpx;
  width: 670rpx;
  margin: 40rpx auto 0;
  padding-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.container .info-view::after {
  content: '';
  position: absolute;
  width: 146rpx;
  height: 200rpx;
  background-image: url('https://cloud-minapp-27037.cloud.ifanrusercontent.com/1hVVjGfKKINJesbF.png');
  background-size: 100% 100%;
  top: 30rpx;
  right: 7rpx;
}

.info-view .info-view-title {
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #383838;
  letter-spacing: 2rpx;
  line-height: 56rpx;
  margin: 40rpx 0 16rpx 32rpx;
}

.info-view .info-view-item {
  position: relative;
  box-sizing: border-box;
  padding-left: 196rpx;
}

.info-view-item .item-lebal {
  font-size: 28rpx;
  color: #7D7D7D;
  line-height: 56rpx;
  position: absolute;
  top: 0;
  left: 32rpx;
}

.info-view-item .item-value {
  font-size: 28rpx;
  color: #7D7D7D;
  line-height: 56rpx;
  width: 440rpx;
  word-wrap: break-word;
  letter-spacing: 1rpx;
}

.container .order-statement {
  opacity: 0.64;
  font-size: 28rpx;
  color: #748CAF;
  line-height: 48rpx;
  width: 670rpx;
  margin: 40rpx auto 0;
}

.footer {
  width: 100%;
  background: #F1BF00;
  box-shadow: 0 -1px 17px 0 rgba(108, 108, 108, .5);
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
  border-radius: 16rpx 16rpx 0 0;
  display: flex;
  justify-content: space-between;
}

.footer .order-info {
  box-sizing: border-box;
  padding: 16rpx 0 24rpx 40rpx;
  width: 520rpx;
}

.order-info .order-text {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #fff;
  letter-spacing: 1rpx;
}

.order-info .order-num {
  font-size: 36rpx;
  color: #fff;
  line-height: 50rpx;
  font-family: PingFangSC-Semibold;
  margin-top: 4rpx;
  letter-spacing: 1.28rpx;
}

.order-info .order-num .JPY-num {
  display: inline-block;
  line-height: 50rpx;
  margin-left: 36rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.footer .submit {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 530rpx;
  background: #CF0F12;
}

.footer .submit .sumit-text {
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}