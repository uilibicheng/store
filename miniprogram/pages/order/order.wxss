/* pages/order/order.wxss */
.wx-swiper-dots.wx-swiper-dots-horizontal {
  bottom: 10rpx;
}

.container {
  padding-bottom: 200rpx;
  overflow: hidden;
}

.container .order-header {
  box-sizing: border-box;
  width: 670rpx;
  padding: 24rpx 32rpx 32rpx 80rpx;
  margin: 40rpx auto 0;
  background-size: 100%;
  min-height: 352rpx;
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
}

.order-header .order-status {
  height: 84rpx;
  position: relative;
}

.order-header .order-status::before {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 28rpx;
  background-image: url('https://cloud-minapp-27037.cloud.ifanrusercontent.com/1hVSQtKcoCX8z1yS.png');
  background-size: 100% 100%;
  top: 17rpx;
  left: -50rpx;
}

.order-status .status-title {
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #FFFFFF;
  line-height: 56rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.order-status .status-btn {
  position: absolute;
  box-sizing: border-box;
  width: 120rpx;
  height: 54rpx;
  border: 2rpx solid #FFF;
  line-height: 52rpx;
  border-radius: 27rpx;
  font-size: 28rpx;
  color: #F2F5FB;
  text-align: center;
  right: 0;
  top: 2rpx;
}

.order-status .status-text {
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 56rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.order-header .order-info {
  position: relative;
  box-sizing: border-box;
  /* padding-left: 168rpx; */
  margin-bottom: 40rpx;
}

.order-info .order-info-item {
  margin-bottom: 16rpx;
}

.order-info-item .order-info-title, .order-info-item .order-info-value {
  float: left;
  width: 248rpx;
  /* font-weight: 500; */
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #F2F5FB;
  line-height: 50rpx;
  word-wrap: break-word;
}

.order-info-item .order-info-value {
  width: 270rpx;
}

.order-header .order-amount {
  position: relative;
  box-sizing: border-box;

}

.order-header .order-amount.only {
  /* justify-content: flex-end; */
}

.order-amount .order-amount-num {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #F2F5FB;
  line-height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.order-amount .order-amount-item {
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 40rpx;
}

.content .order-core-content {
  overflow: hidden;
  /* padding-bottom: 40rpx; */
  display: block;
  flex-shrink: 0;
}

.content .order-info-container {
  width: 552rpx;
  flex-shrink: 0;
  margin-left: 32rpx;
  position: relative;
  overflow: hidden;
  padding-bottom: 32rpx;
}

.order-core-content:nth-child(odd) .order-info-container {
  background: #30A0DF;
}

.order-core-content:nth-child(even) .order-info-container {
  background: #F1BF00;
}

.content .order-info-container.info-container {
  border-radius: 16rpx;
}

.content .order-core-content.just-one {
  margin-left: 26rpx;
}

.content .qrcode-container {
  width: 630rpx;
  padding: 0.1px 0 20rpx;
  padding-bottom: 40rpx;
  display: block;
  border-bottom-left-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.content .qrcode-container.just-one {
  width: 552rpx;
}

.order-info-container .content-ticket-name {
  display: flex;
  position: relative;
}

.content-ticket-name image {
  width: 136rpx;
  height: 172rpx;
  margin: 22rpx 0 22rpx 40rpx;
}

.content-ticket-name .product {
  /* margin-left: 25rpx;
  flex: 1; */
  position: absolute;
  width: 352rpx;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
}

.content-ticket-name .product .bundle {
  width: 100%;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #FFFFFF;
  line-height: 56rpx;
  /* margin-top: 66rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.content-ticket-name .product .type {
  font-size: 36rpx;
  color: #FFFFFF;
  height: 50rpx;
  margin-top: 8rpx;
}

.order-info-container .content-item {
  margin-bottom: 16rpx;
  display: flex;
  color: #fff;
}

.content-item .content-item-title {
  font-size: 28rpx;
  line-height: 40rpx;
  width: 115rpx;
  margin-left: 40rpx;
}

.content-item .content-item-value {
  font-size: 28rpx;
  line-height: 40rpx;
  width: 325rpx;
  margin-left: 45rpx;
}

.content .content-email-hint {
  color: #7D7D7D;
  font-size: 20rpx;
  line-height: 28rpx;
  margin-left: 56rpx;
}

.content-email-title {
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  color: #383838;
  line-height: 56rpx;
}

.content-email-value {
  font-size: 28rpx;
  color: #7D7D7D;
  line-height: 56rpx;
  margin-top: 16rpx;
  word-wrap: break-word;
  letter-spacing: 1rpx;
}

.ticket-policy {
  padding: 0 32rpx;
  margin: 60rpx 0 40rpx !important;
}

.ticket-policy .content-email-title {
  margin-bottom: 20rpx;
}

