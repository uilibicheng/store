/**index.wxss**/
.page-container-home {
  background-color: #fff;
  padding-bottom: 180rpx;
  background-image: url('https://cloud-minapp-27037.cloud.ifanrusercontent.com/1hVCpSJTOszhGTWL.png');
  background-size: 100% auto;
  background-repeat: repeat;
  position: relative;
  overflow-x: hidden;
}

.header {
  height: 158rpx;
  position: relative;
  z-index: 1;
}

.header .logo {
  width: 237rpx;
  height: 119rpx;
  margin: 20rpx 0 0 40rpx;
}

.header .service {
  width: 176rpx;
  height: 96rpx;
  position: absolute;
  top: 32rpx;
  right: 40rpx;
  background-color: #006CBA;
  background-image: url('https://cloud-minapp-27037.cloud.ifanrusercontent.com/1hVWhhUmZ11gG1xz.png');
  background-size: 100% 100%;
  border: 1px solid #006CBA;
}

.header-color-block {
  position: absolute;
  width: 200vw;
  height: 200vw;
  background-color: #006CBA;
  z-index: 0;
  top: -140vw;
  left: -50vw;
  /* border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%; */
  border-radius: 50%;
}

.single-swiper {
  display: block;
  width: 670rpx;
  height: 376rpx;
  margin: 0 auto 47rpx;
  border-radius: 28rpx;
  /* box-shadow: 0 4rpx 32rpx 0 rgba(4, 55, 139, 0.20); */
}

.banner {
  height: 376rpx;
  margin-bottom: 16rpx;
}

.banner .banner-item {
  width: 670rpx;
  height: 376rpx;
  margin: 0 auto;
  border-radius: 28rpx;
  display: block;
  /* box-shadow: 0 4rpx 32rpx 0 rgba(4, 55, 139, 0.20); */
}

.title {
  height: 105rpx;
  position: relative;
  color: #383838;
}

.title .title-ch {
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  line-height: 66rpx;
  position: absolute;
  top: 5rpx;
  left: 40rpx;
}

.title .title-en {
  font-size: 24rpx;
  line-height: 32rpx;
  position: absolute;
  top: 62rpx;
  left: 40rpx;
}

.title .view-more {
  font-size: 24rpx;
  line-height: 34rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.ticket-bundle-list {
  height: 610rpx;
}

.ticket-bundle-list .ticket-bundle-view {
  display: flex;
}

.ticket-bundle-view .ticket-bundle-item {
  flex-shrink: 0;
  width: 360rpx;
  height: 560rpx;
  display: block;
  margin-left: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 35rpx;
  /* background-image: linear-gradient(-180deg, rgba(0, 50, 84, 0.00) 43%, #003254 74%); */
  /* border-radius: 18rpx; */
  /* box-shadow: 0 4rpx 32rpx 0 rgba(4, 55, 139, 0.20); */
  position: relative;
}

.ticket-bundle-view .ticket-bundle-item:first-child {
  margin-left: 40rpx;
}

.ticket-bundle-view .mr {
  flex-shrink: 0;
  width: 1rpx;
  height: 1rpx;
  margin-left: 39rpx;
}

.present-list {
  height: 615rpx;
  margin-top: 5rpx;
}

.present-list .present-view {
  display: flex;
}

.present-view .present-item {
  flex-shrink: 0;
  width: 439rpx;
  height: 615rpx;
  display: block;
  position: relative;
}

.present-view .present-item:first-child {
  margin-left: 20rpx;
}

.present-view .mr {
  flex-shrink: 0;
  width: 1rpx;
  height: 1rpx;
  margin-left: 20rpx;
}

.present-item .item-img {
  display: block;
  width: 400rpx;
  height: 400rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(0,40,104,0.10);
  border-radius: 18rpx;
  margin: 28rpx auto;
}

.present-item .item-name {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #12408C;
  line-height: 48rpx;
  width: 400rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  margin: 0 auto;
}

.present-item .item-info {
  width: 400rpx;
  height: 48rpx;
  margin: 24rpx auto 0;
}

.item-info .price {
  font-family: SFProText-Bold;
  font-size: 40rpx;
  color: #0F42E7;
  line-height: 48rpx;
  font-weight: bold;
}

.item-info .text {
  opacity: 0.64;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #49536D;
  line-height: 48rpx;
  margin-left: 10rpx;
  position: relative;
  top: -4rpx;
}

.item-info .btn {
  float: right;
  width: 120rpx;
  height: 48rpx;
  background-image: linear-gradient(90deg,
  #FFBC00 0%,
  #FA8023 100%);
  border-radius: 24rpx;
  line-height: 48rpx;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  text-align: center;
}

.footer {
  width: 100vw;
  background: #006CBA;
  box-shadow: 0 -2rpx 40rpx 0 rgba(108, 108, 108, .5);
  border-radius: 16rpx 16rpx 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
}

.footer-tab {
  height: 127rpx;
  display: flex;
  justify-content: space-around;
}

.footer-tab .item {
  height: 100%;
  width: 100rpx;
  text-align: center;
  position: relative;
}

.footer-tab .item image {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin: 20rpx auto 0;
}

.footer-tab .item .active {
  width: 80rpx;
  height: 74rpx;
  margin: -7rpx auto 0;
}

.footer-tab .item text {
  font-family: PingFangSC-Semibold;
  position: absolute;
  color: #fff;
  font-size: 24rpx;
  bottom: 20rpx;
  width: 100%;
  line-height: 34rpx;
  left: 0;
}

.free-prize-modal {
  background: #FFF;
  box-shadow: 0 0 24rpx 0 rgba(21, 65, 136, .2);
  border-radius: 12rpx;
  width: 718rpx;
  min-height: 96rpx;
  position: fixed;
  bottom: 170rpx;
  left: 50%;
  transform: translateX(-50%);
}

.free-prize-modal .icon {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  left: 24rpx;
  background: #F7F7F7;
  border-radius: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.free-prize-modal .icon .icon-img {
  display: block;
  width: 24rpx;
  height: 24rpx;
  margin: 20rpx auto 0;
}

.free-prize-modal .hint {
  width: 505rpx;
  font-size: 24rpx;
  color: #49536D;
  line-height: 34rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 112rpx;
}

.free-prize-modal .close-block {
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.free-prize-modal .close-block .close {
  display: block;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.guidance-block {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.7);
}

.guidance-block .icon {
  position: absolute;
  width: 104rpx;
  height: 104rpx;
  background-color: #E8F1FA;
  top: 18rpx;
  right: 18rpx;
  border-radius: 52rpx;
}

.guidance-block .icon .minapp {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.guidance-block .guidance-line {
  width: 248rpx;
  height: 248rpx;
  position: absolute;
  top: 50rpx;
  right: 125rpx;
}

.guidance-block .guidance-hint {
  text-align: center;
  margin-top: 364rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #E8F1FA;
  line-height: 64rpx;
}

.guidance-block .guidance-close {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 36vh auto 0;
}

.point-view {
  height: 48rpx;
  border: 1rpx solid #12408C;
  border-radius: 26rpx;
  line-height: 48rpx;
  text-align: center;
  padding: 0 20rpx;
  position: absolute;
  left: 250rpx;
  top: 12rpx;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #12408C;
  letter-spacing: -0.42rpx;
}

.title .small-hint {
  font-size:20rpx;
  line-height:32rpx;
}

.lottery-entrance {
  position: fixed;
  width: 190rpx;
  height: 188rpx;
  top: 625rpx;
  left: -42rpx;
}