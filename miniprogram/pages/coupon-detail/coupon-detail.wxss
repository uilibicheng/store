.content {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.box-wrap {
  background: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-name {
  font-size: 28rpx;
  color: #1E1E1E;
}

.shop-sales {
  font-size: 26rpx;
  color: #DEA764;
}

.coupon-name {
  margin-top: 20rpx;
  font-size: 36rpx;
  color: #2D2D2D;
  font-weight: bold;
}

.coupon-price {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #DEA764;
  display: flex;
  align-items: center;
}

.cpupon-price-symbol {
  font-size: 20rpx;
}

.coupon-discount {
  margin-left: 40rpx;
  padding-left: 10rpx;
  font-size: 20rpx;
  width: 70rpx;
  height: 35rpx;
  line-height: 35rpx;
  border: 2rpx solid #DEA764;
  border-left: none;
  position: relative;
}

.coupon-discount::before {
  position: absolute;
  top: 5rpx;
  left: -13rpx;
  content: '';
  display: inline-block;
  width: 22rpx;
  height: 22rpx;
  border-top: 2rpx solid #DEA764;
  border-left: 2rpx solid #DEA764;
  transform: rotate(-45deg);
}

.use-time {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #A3A3A3;
}

/* 商家信息 */
.merchant {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.logo {
  width: 100rpx;
  height: 100rpx;
}

.merchang-info {
  width: 500rpx;
  font-size: 28rpx;
  color: #1E1E1E;
}

.merchant-info-intro {
  margin-top: 20rpx;
  display: flex;
  display: flex;
  font-size: 24rpx;
  color: #919191;
}

.phone-wrap {
  font-size: 24rpx;
}

.phone {
  width: 50rpx;
  height: 50rpx;
}

.tip-wrap {
  margin-top: 30rpx;
}

.tip-title {
  font-size: 42rpx;
  color: #1E1E1E;
  font-weight: bold;
}

.tip-block {
  margin-top: 30rpx;
  color: #222222;
  font-size: 28rpx;
  display: flex;
}

.tip {
  color: #D19D4E;
  flex-shrink: 0;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #F8F8F8;
}

.price-wrap {
  font-size: 46rpx;
  color: #EB9034;
}

.price-unit {
  font-size: 26rpx;
}

.orginial-price {
  font-size: 26rpx;
  color: #A0A0A0;
  text-decoration: line-through;
}

.footer-btn {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #E89437;
  color: #ffffff;
  font-size: 38rpx;
  border-radius: 45rpx;
}

