.show-more-order-info {
  display: flex;
  font-size: 24rpx;
  color: #A5ABBF;
  height: 34rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 18rpx;
}

.show-more-order-info image {
  width: 16rpx;
  height: 8rpx;
  margin-left: 10rpx;
}

.filter-mask {
  position: fixed;
  z-index: 20;
  background-color: rgba(0, 0, 0, .6);
  left: 0;
  right: 0;
  bottom: 0;
}

.filter-panel {
  width: 100%;
  padding: 16rpx 0;
  background-color: #fff;
}

.filter-type-list {
  display: flex;
  flex-flow: wrap;
  padding-top: 20rpx;
}

.filter-type-list .filter-type-item {
  width: 210rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #9D9C9C;
  /* margin: 0 33rpx 20rpx 33rpx; */
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

.filter-type-list .filter-type-item.active {
  color: #846B5A;
}

.no-order-list-data {
  text-align: center;
  margin: 500rpx auto 0;
  font-size: 28rpx;
  color: #856E5D;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
  opacity: .8;
}

.no-order-list-data image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

/* ============================================================ */

.relate-order-modal {
  height: 928rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.relate-order-modal .qrcode {
  width: 304rpx;
  height: 304rpx;
  border-radius: 8rpx;
  /* background-color: #fff; */
  padding: 16rpx;
}

.relate-order-modal .qrcode image {
  width: 100%;
  height: 100%;
}

.relate-order-modal .hint {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #4B5767;
  line-height: 44rpx;
  margin-top: 44rpx;
  text-align: center;
}

.avatar-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin-top: 44rpx;
}

.icon-link {
  width: 82rpx;
  height: 66rpx;
  margin: 30rpx 30rpx 0;
}

.role-container {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.role-avatar {
  width: 118rpx;
  height: 118rpx;
  border-radius: 50%;
  border: 6rpx solid #CBBDAB;
  overflow: hidden;
}

.role-name {
  margin-top: 10rpx;
  font-weight: 700;
  font-size: 32rpx;
  color: #4B5767;
  line-height: 44rpx;
  min-width: 118rpx;
  width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.modify-order-modal {
  padding: 48rpx 48rpx 64rpx;
}

.modify-order-modal .title {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #4B5767;
  line-height: 44rpx;
  margin: 0 auto 20rpx;
  text-align: center;
}

.modify-order-modal .store-note {
  background-color: rgba(227, 227, 227, .25);
  border: 1rpx solid rgba(151, 151, 151, .25);
  border-radius: 8rpx;
  padding: 16rpx 33rpx 20rpx 24rpx;
  margin-top: 26rpx;
}

.modify-order-modal .store-note .label {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4B5767;
  line-height: 40rpx;
}

.modify-order-modal .store-note .store-note-input {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4B5767;
  line-height: 40rpx;
  border: none;
  width: 100%;
  height: 100rpx;
  opacity: .9;
  margin-top: 10rpx;
}

.modify-order-modal .store-note .store-note-input-placeholder {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  opacity: .8;
}

.modify-order-modal .submit-btn {
  width: 298rpx;
  height: 80rpx;
  text-align: center;
  line-height: 78rpx;
  border: 1rpx solid #8C7565;
  border-radius: 42rpx;
  margin: 48rpx auto 0;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
}

.modify-order-scroller {
  max-height: 600rpx;
}

.modify-order-info-item {
  margin-top: 32rpx;
}

.modify-order-info-item .product-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modify-order-info-item .product-status .name {
  font-size: 28rpx;
  color: #856E5D;
  display: flex;
  align-items: center;
}

.modify-order-info-item .product-status .name .name-index {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-weight: 700;
  font-size: 24rpx;
  color: #856E5D;
  background-color: #E2D7CD;
  border-radius: 50%;
  margin-left: 3rpx;
}

.modify-order-info-item .product-status .status-picker {
  width: 256rpx;
  height: 58rpx;
  background-color: rgba(227, 227, 227, .25);
  border: 1rpx solid rgba(151, 151, 151, .25);
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8C7565;
  padding: 0 16rpx;
}

.modify-order-info-item .product-status .status-picker image {
  width: 18rpx;
  height: 12rpx;
}

.modify-order-info-item .send-amount {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
}
