<!--pages/tailored-detail/tailored-detail.wxml-->
<scroll-view scroll-y class="page-scroll-container" bindscroll="onScrollerScroll">

<page-header selfStyle="{{pageHeaderStyle}}" />

<view class="tailored-header">
  <view class="tailored-header-item">
    <view class="label">订单号</view>
    <view class="value">{{orderInfo.order_id}}</view>
  </view>
  <view class="tailored-header-item">
    <view class="label">订单日期</view>
    <view class="value">{{orderInfo.created_at_format}}</view>
  </view>
  <view class="tailored-header-item">
    <view class="label">客户名称</view>
    <view class="value">{{orderInfo.contact_name}}</view>
  </view>
  <view class="tailored-header-item">
    <view class="label">联系方式</view>
    <view class="value">{{orderInfo.contact_phone}}</view>
  </view>
</view>

<tailored-panel orderInfo="{{orderInfo}}" wx:if="{{orderInfo.tailored_id}}" />

<view class="order-store">
  <view class="order-store-name">
    商家名称 <text>{{orderInfo.store_name}}</text>
  </view>
  <view class="order-store-tel" bindtap="handlePhoneCall">
    联系方式 <text>{{orderInfo.store_phone}}</text>
    <image src="./images/icon-phone.png" />
  </view>
</view>

<view style="height: 80rpx;"></view>

<contact-entrance />

</scroll-view>
