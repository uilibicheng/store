/* pages/business-info/business-info.wxss */
.page-scroll-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 40rpx;
  color: #4B5767;
  text-align: center;
  line-height: 56rpx;
  margin: 64rpx auto 0;
}

.btn {
  width: 296rpx;
  height: 84rpx;
  border: 2rpx solid #8C7565;
  border-radius: 45rpx;
  text-align: center;
  line-height: 80rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
  margin: 100rpx auto 0;
}

.hint {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #8D8D8D;
  text-align: center;
  margin: 16rpx auto 0;
  line-height: 34rpx;
}

.form-label {
  display: flex;
  padding-left: 50rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8D8D8D;
  justify-content: space-between;
  margin-top: 48rpx;
  align-items: center;
}

.form-label-name {
  display: flex;
  align-items: flex-start;
}

.form-label-name .required {
  font-size: 24rpx;
  color: #CF5757;
  margin-left: 8rpx;
}

.form-label .add-address {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8C7565;
  display: flex;
  align-items: center;
  margin-right: 50rpx;
}

.form-label .add-address image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.upload-btn {
  width: 134rpx;
  height: 134rpx;
  border: 1px solid #979797;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 50rpx;
  margin-top: 18rpx;
}

.upload-btn image {
  width: 22rpx;
  height: 22rpx;
}

.upload-img {
  width: 134rpx;
  height: 134rpx;
  border-radius: 8rpx;
  margin-left: 50rpx;
  margin-top: 18rpx;
  position: relative;
}

.upload-img .img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background-color: white;
}

.upload-img .delete {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  top: -7rpx;
  right: -7rpx;
}

.form-input {
  width: 654rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-left: 50rpx;
  margin-top: 18rpx;
  padding: 0 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8D8D8D;
}

.form-input-placeholder {
  opacity: .5;
}

.form-input-panel {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
  justify-content: center;
}

.form-input-panel .cancel-btn {
  width: 56rpx;
  height: 56rpx;
  margin-left: 10rpx;
  position: relative;
  top: -2rpx;
}

.icon-location {
  width: 40rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
