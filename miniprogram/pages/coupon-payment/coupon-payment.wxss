.content {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.box-wrap {
  background: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #F8F8F8;
}

.price-wrap {
  font-size: 46rpx;
  color: #EB9034;
}

.price-unit {
  font-size: 26rpx;
}

.orginial-price {
  font-size: 26rpx;
  color: #A0A0A0;
  text-decoration: line-through;
}

.footer-btn {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #E89437;
  color: #ffffff;
  font-size: 38rpx;
  border-radius: 45rpx;
}