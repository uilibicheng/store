.content {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.box-wrap {
  background: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.header {
  display: flex;
}

.coupon-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 35rpx;
}

.coupon-name {
  font-size: 32rpx;
  color: #333333;
}

.coupon-time {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #BABABA;
}

.header-price-wrap {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: #EB9034;
}

.header-price-unit {
  font-size: 24rpx;
}

.header-orginial-price {
  font-size: 26rpx;
  color: #A0A0A0;
  text-decoration: line-through;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #F8F8F8;
}

.price-title {
  font-size: 28rpx;
  color: #757575;
}

.price-wrap {
  font-size: 40rpx;
  color: #EB9034;
  display: flex;
  align-items: flex-end;
}

.price-unit {
  font-size: 26rpx;
}

.container {
  margin-top: 35rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.container-row {
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1px solid #F8F8F8;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.container-row:last-child {
  border-bottom: none;
}

.row-title {
  color: #4C4C4C;
  font-weight: bold;
}

.no-text {
  color: #A9A9A9;
}

.row-phone {
  color: #333333;
}

.phone-input {
  text-align: right;
}

.change-num-wrap {
  display: flex;
  align-items: center;
}

.change-num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F9F9F9;
  border-radius: 5rpx;
  text-align: center;
  color: #B7B7B7;
  font-size: 42rpx;
}

.active-change {
  color: #333333;
}

.row-num {
  font-size: 26rpx;
  margin: 0 5rpx;
  color: #575757;
}

.footer-detail {
  margin-top: 10rpx;
  margin-bottom: 25rpx;
  color: #BEBEBE;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.footer-arrow {
  margin-left: 10rpx;
  margin-top: 5rpx;
  width: 30rpx;
  height: 30rpx;
}

.footer-btn {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: #E89437;
  color: #ffffff;
  font-size: 38rpx;
  border-radius: 45rpx;
}