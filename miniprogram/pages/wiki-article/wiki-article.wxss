/* pages/wiki-article/wiki-article.wxss */
.page-scroll-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
}

.wiki-article-page {
  padding: 48rpx 48rpx 180rpx;
}

.title {
  /* font-weight: 700; */
  font-weight: 700;
  font-size: 48rpx;
  color: #4B5767;
  line-height: 66rpx;
}

.date {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  margin-top: 16rpx;
  margin-bottom: 28rpx;
}

.rich-text-content {
  /* font-family: PingFangSC-Regular; */
  font-size: 28rpx;
  color: #4B5767;
  line-height: 48rpx;
  background-color: rgba(0, 0, 0, 0);
}

/* =================================================== */

.link-container {
  position: fixed;
  width: 100vw;
  opacity: .96;
  background: #856E5D;
  border-radius: 0 60rpx 0 0;
  bottom: 0;
  left: 0;
}

.link-panel {
  width: 100vw;
  display: flex;
  padding: 16rpx 48rpx;
  align-items: center;
}

.pb34 {
  padding-bottom: 34rpx;
}

.link-info {
  flex: 1;
}

.link-store {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 44rpx;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-slogan {
  opacity: .6;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 34rpx;
  margin-top: 4rpx;
}

.link-btn {
  width: 128rpx;
  height: 60rpx;
  line-height: 58rpx;
  border: 1px solid #E7E0D6;
  border-radius: 30rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #E7E0D6;
}

.modal-contanier {
  padding: 48rpx;
}

.modal-contanier .title {
  text-align: center;
  line-height: 66rpx;
  font-family: PingFangSC-Medium;
  font-size: 48rpx;
  color: #4B5767;
  margin: 26rpx auto 40rpx;
  max-width: 570rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-store-info {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}

.modal-store-info .label {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4E4E4E;
  margin-right: 32rpx;
}

.modal-store-info .value {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  max-width: 330rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-store-info image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 16rpx;
}

.modal-separator {
  height: 65rpx;
  border-bottom: 1rpx solid #979797;
  margin-bottom: 51rpx;
  opacity: .25;
}

.modal-buy-hint {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #4B5767;
  text-align: center;
  margin-bottom: 32rpx;
}

.modal-options {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, .7);
  margin-bottom: 16rpx;
  padding: 0 36rpx 0 32rpx;
}

.modal-options .label {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #4E4E4E;
  max-width: 308rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.modal-options .btn {
  width: 154rpx;
  height: 54rpx;
  border: 1rpx solid rgba(134, 111, 94, .2);
  border-radius: 28rpx;
  line-height: 52rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #866F5E;
}
