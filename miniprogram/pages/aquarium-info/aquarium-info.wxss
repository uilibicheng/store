/* pages/aquarium-info/aquarium-info.wxss */
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 70rpx;
}

.header {
  width: 100%;
  height: 562rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.header .banner {
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  margin-top: 500rpx;
  background: #006CBA;
  box-shadow: 0 0 32rpx 0 rgba(45, 61, 112, 0.32);
  border-radius: 32rpx 32rpx 0px 0px;
  box-sizing: border-box;
  padding: 40rpx 40rpx 200rpx;
  position: relative;
  min-height: 67vh;
}

.content .title-en {
  font-family: SFProText-Heavy;
  font-weight: bold;
  font-size: 48rpx;
  color: #FFFFFF;
  line-height: 58rpx;
}

.content .title-cn {
  margin: 16rpx 0 40rpx;
  font-family: FZLTDHJW--GB1-0;
  font-weight: bold;
  font-size: 48rpx;
  color: #FFFFFF;
  line-height: 58rpx;
}

.content .info-title {
  margin: 40rpx 0 24rpx;
  font-family: PingFangSC-Semibold;
  font-weight: bold;
  font-size: 36rpx;
  color: #FFFFFF;
  box-sizing: border-box;
  padding-left: 24rpx;
  position: relative;
}

.content .info-title::before {
  content: '';
  display: block;
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background: #FFB800;
  top: 20rpx;
  /* transform: translateY(-50%); */
  left: 0;
  border-radius: 6rpx;
}

.content .info-content {
  display: block;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 56rpx;
}

.content .image-tail {
  height: 185rpx;
  display: flex;
  flex-flow: row-reverse;
}

.image-tail image {
  width: 410rpx;
  height: 100%;
  position: relative;
  left: 40rpx;
}

.footer {
  width: 100vw;
  background: #006CBA;
  box-shadow: 0 -2rpx 40rpx 0 rgba(108, 108, 108, .5);
  border-radius: 16rpx 16rpx 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
}

.footer-tab {
  height: 127rpx;
  display: flex;
  justify-content: space-around;
}

.footer-tab .item {
  height: 100%;
  width: 100rpx;
  text-align: center;
  position: relative;
}

.footer-tab .item image {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin: 20rpx auto 0;
}

.footer-tab .item .active {
  width: 80rpx;
  height: 74rpx;
  margin: -7rpx auto 0;
}

.footer-tab .item text {
  font-family: PingFangSC-Semibold;
  position: absolute;
  color: #fff;
  font-size: 24rpx;
  bottom: 20rpx;
  width: 100%;
  line-height: 34rpx;
  left: 0;
}

.wxParserText {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 56rpx;
}