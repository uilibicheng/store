/* pages/prize-list/prize-list.wxss */
.container {
  padding: 24rpx 0rpx 100rpx;
  background-color: #E8F1FA;
  min-height: 92vh;
}

.header {
  height: 96rpx;
  position: relative;
}

.header image {
  width: 137rpx;
  height: 55rpx;
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}

.prize-item {
  height: 304rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
}

.prize-img {
  display: block;
  width: 240rpx;
  height: 240rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(0, 40, 104, 0.10);
  border-radius: 18rpx;
  margin-left: 40rpx;
  margin-top: 32rpx;
}

.prize-info {
  width: 390rpx;
  right: 40rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.prize-name {
  font-family: PingFangSC-Medium;
  font-weight: bold;
  font-size: 36rpx;
  color: #12408C;
  line-height: 48rpx;
  margin-bottom: 40rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.prize-bar {
  display: flex;
  height: 48rpx;
  justify-content: space-between;
}

.prize-price {
  font-family: SFProText-Heavy;
  font-weight: 900;
  font-size: 40rpx;
  color: #0F42E7;
  line-height: 48rpx;
}

.prize-price text {
  opacity: 0.64;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #49536D;
  line-height: 34rpx;
  position: relative;
  top: -4rpx;
}

.prize-btn {
  width: 120rpx;
  height: 48rpx;
  background-image: linear-gradient(90deg, #FFBC00 0%, #FA8023 100%);
  border-radius: 24rpx;
  text-align: center;
  line-height: 48rpx;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #FFFFFF;
}

.hint {
  font-size: 24rpx;
  color: #748CAF;
  width: 100%;
  line-height: 34rpx;
  text-align: center;
  margin: 20rpx 0 60rpx;
}

.point-view {
  height: 48rpx;
  border: 1rpx solid #12408C;
  border-radius: 26rpx;
  line-height: 48rpx;
  text-align: center;
  padding: 0 20rpx;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #12408C;
  letter-spacing: -0.42rpx;
}
