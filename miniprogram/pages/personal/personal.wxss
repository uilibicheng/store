.footer {
  width: 100vw;
  background: #006CBA;
  box-shadow: 0 -2rpx 40rpx 0 rgba(108, 108, 108, .5);
  border-radius: 16rpx 16rpx 0 0;
  position: fixed;
  bottom: 0;
  left: 0;
}

